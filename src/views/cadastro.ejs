<%- include('includes/head') %>
    <div class="container" style="background-color: rgb(41, 41, 41);">
        <%- include('includes/messages') %> 

        <form action="/login/register" method="POST" style="color: white;">
          <input type="hidden" name="_csrf" value= <%= csrfToken %>>
            <div class="form-group">
              <label>Nome</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input type="password" class="form-control" name="password">
              </div>
              <br><br>
              <div class="flex row">
                <p class="center">Usuário ADM?</p>
                <select class="center" name="adm">
                  <option>não</option>
                  <option>sim</option>
                </select>
              </div>
              
            <button type="submit" class="btn btn-primary mt-1">Cadastrar usuário</button>
            <a href="/">Retornar</a>
        </form>
        
    </div>
<%- include('includes/footer') %> 