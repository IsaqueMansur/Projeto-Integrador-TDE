<%- include('includes/head') %>
    <div class="container">
        <%- include('includes/messages') %> 
        <div class="content second-content">
            <div class="first-column">
                <h2 class="title title-primary">Olá, Colunista!</h2>
                <p class="description description-primary">Para poder publicar novas notícias</p>
                <p class="description description-primary">Faça o login</p>
                <a href="/">Não sou um colunista</a>
            </div>
            <div class="second-column">
                <h2 class="title title-second">Fazer login</h2>
                <div class="social-media">
                    <ul class="list-social-media">
                        <a class="link-social-media" href="#">
                            <li class="item-social-media">
                                <i class="fab fa-facebook-f"></i>
                            </li>
                        </a>
                        <a class="link-social-media" href="#">
                            <li class="item-social-media">
                                <i class="fab fa-google-plus-g"></i>
                            </li>
                        </a>
                        <a class="link-social-media" href="#">
                            <li class="item-social-media">
                                <i class="fab fa-linkedin-in"></i>
                            </li>
                        </a>
                    </ul>
                </div><!-- social media -->
                <form class="flex column form" action="/login/login" method="POST">

                    <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                    
                    <label class="label-input">
                        <i class="far fa-envelope icon-modify"></i>
                        <input id="emaillogin" name="email" type="email" placeholder="E-mail" class="input-padrao-login">
                    </label>
                
                    <label class="label-input">
                        <i class="fas fa-lock icon-modify"></i>
                        <input id="senhalogin" name="password" type="password" placeholder="Senha" class="input-padrao-login">
                    </label>
                
                    <a class="password" href="#">Esqueceu sua senha?</a>
                    <button class="btn btn-second" type="submit">login</button>
                </form>
            </div><!-- second column -->
        </div><!-- second-content -->
    </div>
<%- include('includes/footer') %> 